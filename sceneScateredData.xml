<rEngine>
<texturePath>
	<path>textures</path>
</texturePath>
<window id="win1">
	<size>800 600</size>
	<title>Main window</title>
	<viewport type="fullscreen">
		<texture name="scene_combine" />
	</viewport>
</window>

<texture name="red"  src="textures/red.jpg" />
<texture name="colors"  src="textures/colors.jpg" />
<texture name="floor" src="textures/floor.jpg" />
<texture name="green" src="textures/green.jpg" />
<texture name="blue"  src="textures/blue.jpg" />
<texture name="yellow" src="textures/yellow.jpg" />
<texture name="trans" src="textures/trans.png" />
<texture name="white" src="textures/white.jpg" />
<texture name="lorem" src="textures/lorem.jpg" />

  <scene id="scene" window="win1">
    <camera type="trackball">
      <projection type="perspective" near="0.1" far="10" fov="45" />
      <direction>0 0 1</direction>
      <focus>0.5 0.5 0.5</focus>
      <zoom>1</zoom>
    </camera>

    <light type="point">
      <position>0 0 1</position>
      <color>255 255 255</color>
    </light>

    <csg>
      <pointCloud>
        <points mesh="F:\cpp\rGraphicsLibrary\models\cow.obj" amount="15000" />
        <hints>
          <overlap>3</overlap>
          <K>20</K>
          <supportSize>0.05</supportSize>
          <reg>0.00001</reg>
        </hints>
      </pointCloud>
      <bounds>
        <min>0 0 0</min>
        <max>1 1 0.5</max>
      </bounds>
      <resolution>100</resolution>

      <material>
        <specular>255 0 0</specular>
        <ambient>255 255 255</ambient>
        <specularity>110</specularity>
      </material>
    </csg>
    
    
    
  </scene>
    
</rEngine>